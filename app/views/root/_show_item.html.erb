<div class='item' hnid='<%= item.hnid %>' style='display:none'>
  <div class='contextbox'>
    <% if item.parent %>
      <div class='contextbutton'>all parents</div>
      <div class='context'>
        <% item.ancestors.reverse.each do |ancestor| %>
          <div class='ancestor'>
            <%= raw ancestor.contents %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class='itembox'>
    <%= raw item.contents %>
  </div>

  <div class='threadbox'>
    <%= raw item.render_thread %>
  </div>
</div>
