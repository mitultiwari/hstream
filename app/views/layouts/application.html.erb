<!DOCTYPE html>
<html>
  <head>
    <link rel="shortcut icon" href="/favicon.ico"/>
    <title><%= layout['title']%></title>
    <%= stylesheet_link_tag :all %>
    <link rel="stylesheet" media="handheld" href="/stylesheets/handheld/application.css"/>
    <link rel="stylesheet" media="screen and (max-device-width: 801px)" href="/stylesheets/handheld/application.css"/>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
  </head>

  <body>
    <div id="pagetop" style="background: <%= layout['topcolor']%>">
      <div style='height:18px'>
        <div style='float:right; margin-right:5px'>
          <div id='login-links' style='float:left'>
            <a id='login-link' href='#'>login</a> |
            <a id='signup-link' href='#'>signup</a>
          </div>

          <form id='login-form' style='display:none; float:left; font-size:0.75em'>
            email: <input id='login-input' name='email' style='font-size:0.8em'/>
            <input type='submit' value='login' style='font-size:0.75em; vertical-align:middle'/>
          </form>

          <form id='signup-form' style='display:none; float:left; font-size:0.75em'>
            email: <input id='signup-input' name='email' style='font-size:0.8em'/>
            <input type='submit' value='signup' style='font-size:0.75em; vertical-align:middle'/>
          </form>

          <div id='login-flash' style='float:left; margin-left:2em; color:lightgreen'></div>

          <script>
            $('#login-link').click(function() {
              $('#login-links').slideUp('fast',
                function(){$('#login-form').slideDown('fast',
                  function(){$('#login-input').focus();});});
              return false;
            });
            $('#login-form').submit(function() {
              $.ajax({
                url: '/login',
                method: 'post',
                data: {
                  email: $('#login-input').val(),
                  shortlist: shortlist,
                },
                success: function() {
                  $('#login-form').hide();
                },
                error: function() {
                  $('#login-flash').html('user does not exist');
                },
              });
              return false;
            });

            $('#signup-link').click(function() {
              $('#login-links').slideUp('fast',
                function(){$('#signup-form').slideDown(
                  function(){$('#signup-input').focus();});});
              return false;
            });
          </script>

          | <a href='mailto:feedback@readwarp.com'>feedback</a>
        </div>
        <b><a target="_blank" href="<%= layout['root']%>/"><%= layout['title']%></a></b>
        <img height="1" width="10" src="/images/s.gif">
        <a id='active_stories_link' href='active_stories'>active stories</a> |
        <a id='active_users_link' href='active_users'>active users</a> |
        <a target="_blank" href="<%= layout['root']%>/submit">submit</a>
      </div>
    </div>

    <%= yield %>
  </body>
</html>
